@{
    ViewBag.Title = "Customer";
}
@Scripts.Render("~/bundles/DataTableScript")

@Styles.Render("~/bundles/css/DataTableStyle")

@Scripts.Render("~/bundles/Customer")
<style>
    #platformRating {
        display: inline-block;
    }

        #platformRating select,
        #platformRating p {
            display: inline;
            vertical-align: top;
            line-height: 28px;
        }
</style>


<div class="panel-default">
    <section>
        <div class="panel-heading">
            <ol class="breadcrumb">
                <li class="active">Customer</li>
            </ol>
        </div>
        <div id="page-wrapper" class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="widget-container fluid-height">
                        <div class="tab-pane" id="tab1">
                            <br><button class="btn btn-primary" data-toggle="modal" data-target="#addcus" onclick="ClearData()"><i class="icon-plus"></i>Add Customer</button><br>

                            <div class="dataTable_wrapper">

                                <table class="table table-striped table-bordered table-hover" id="tblCustomers">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>Customer</th>
                                            <th>Country</th>

                                        </tr>
                                    </thead>
                                    <tbody id="tbodyCustomers"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Add New Customer-->

        <div class="modal fade" id="addcus" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Customer</h4>
                    </div>
                    <div class="modal-body" id="updatetoolmodal" style="height: 440px;">
                        <form>
                            <div class="col-lg-12">
                                Name : <input type="text" class="form-control" id="name1" placeholder="Enter Name" name="name1">
                                <div class="row">
                                    <label id="tbAddNewCustomer-Required" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                Country:<br />
                                <select class="select2able select2-offscreen" id="sel1">
                                    <option value="0"></option>
                                </select>
                            </div>
                            <br />

                            <div class="col-lg-2">
                                <input type="button" id="addCust" class="btn btn-success pull-down" onclick="ValidateAddCustomer()" value="Submit">

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!--Edit Customer -->
        <div class="modal fade" id="editCustomerModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="scopeTitleModal">Edit Customer</h4>
                    </div>
                    <div class="modal-body" id="updateAccessProfilemodal" style="height: 440px;">
                        <div class="row">
                            <div class="col-lg-6">
                                Customer Name:<a class="text-danger">*</a> <br />
                                <input id="editCustomerName" class="form-control " placeholder="Customer Name" type="text">
                                <div class="row">
                                    <label id="editCustomerNameRequired" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                Customer Country:<a class="text-danger">*</a> <br />
                                <select class="select2able select2-offscreen checkRequiredModal" id="editCustomerCountry" required>
                                    <option value="0"></option>
                                </select>
                                <div class="row">
                                    <label id="editCustomerCountryRequired" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                                </div>
                                <input id="editCustomerID" class="form-control " type="hidden">
                            </div>
                        </div>
                        <div class="row">
                            <center> <button id="btnUpdateCustomer" type="submit" onclick="updateCustomer()" pull-right class="btn btn-primary btn-lg">Update Customer</button></center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



