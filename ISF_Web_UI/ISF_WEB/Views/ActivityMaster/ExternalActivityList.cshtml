@{
    ViewBag.Title = "External Activity List";
}

@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/ExternalActivityList")
<style>
    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }

    tfoot {
        display: table-header-group;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        EXTERNAL ACTIVITY NAME LIST
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-2">
                <button id="btnAddToolKitName" type="submit" class="btn btn-success" data-toggle="modal" data-target="#addActivity" onclick="ClearData()">+ Add New Activity</button>
            </div>
        </div>

        <div class="table-responsive" style="overflow-x: auto; ">
            <table id="Activity_Name_Search" class="table table-striped table-bordered table-hover" style="width:100%"></table>
        </div>
    </div>

    <div class="modal fade" id="editActivityName" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Activity Details</h4>
                </div>
                <div class="modal-body" id="updatetoolmodal" style="height: 440px;">
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addActivity" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">New Activity</h4>
                </div>
                <div class="modal-body" id="addAcitivity2" style="height: 440px;">

                    <form name="frmTool" method="Post" id="uploadTool">
                        <div class="col-lg-4">
                            Activity Name<a class="text-danger">*</a>: <input class="form-control required " placeholder="Activity Name" id="activityName" name="tool" type="text" required />
                            <div class="row">
                                <label id="tbAddNewActivity-Required" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                            </div>
                            <input type="hidden" id="license_Type" name="licenseType" />

                        </div>


                        <div class="col-lg-4">
                            External Source :
                            <select class="select2able sourceId" id="sourceId1"></select>
                            <div class="row">
                                <label id="tbAddNewSource-Required" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                            </div>
                        </div>
                    </form>

                    <input id="addNewAct" type="submit" class="btn btn-success pull-down" onclick="validateAddActivity()" value="Submit">

                </div>
            </div>
        </div>
    </div>
</div>

