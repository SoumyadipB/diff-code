@{
    ViewBag.Title = "Add Location Type";
}

@Scripts.Render("~/bundles/LocationType")
@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Styles.Render("~/bundles/css/DeliveryTracker")

<style>
    .panel-default>.panel-heading {
    color: #333;
    background-color: #d6d6d6;
    border-color: #ddd;
}
    .addLocationDiv{
         box-shadow: 2px 5px 11px 5px rgba(0, 0, 0, 0.3);
         position: relative;
    }
    .table-bordered{
         box-shadow: 1px 5px 11px 5px rgba(0, 0, 0, 0.3);
         position: relative;
    }
    .inputFileClass {
        width: 100%;
        padding: 4px;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .addLocationDiv {
        border: 1px solid lightgray;
        padding: 5px;
        margin-left: 0px;
        margin-right: 0px;
    }

    .EditLocationDiv {
        border: 1px solid #ccc;
        background-color: #ecf7ec;
        border-radius: 4px;
    }
    
        a.icon-edit:hover {
            background-color: #1169b5;
        }

    .colorChange {
        background-color: #ccf5cc !important;
    }
</style>


<div class="col-lg-12" style="padding-right: 0px;padding-left: 0px;">
    <div class="panel panel-default" style="margin: 10px;">
        <div class="panel-heading ">
            <h3 class="panel-title" style="text-align:center;font-weight:bold;" title=""> ADD LOCATION TYPE </h3>

        </div>
        <div class="panel-body" id="" style="padding: 10px;">
            <div class="row addLocationDiv" style="height:94px;">
                <form id="addLocationForm" action="#">
                    <div class="col-lg-4">
                        <label for="locationText">Location Type</label> <a class="text-danger">*</a>:
                        <input class="inputFileClass" type="text" style="margin-top: 4px;" id="locationText" name="locationText" placeholder="Location Type" maxlength="50" onkeyup="validateForEnablingAddButton(); validateForCancelButton();" required />
                        <input type="hidden" id="locationID" />
                    </div>                   

                    <div class="col-sm-1" style="margin-left: 119px;top: 27px;">
                        <label for="radioActive">Active: </label>
                        <input type="radio" id="radioActive" name="locationState" value="True" class="" onchange="validateForCancelButton();" checked />
                    </div>

                    <div class="col-sm-1" id="radioButtonDiv" style="top: 25px;margin-right: 195px;">
                        <label for="radioInactive">Inactive: </label>
                        <input type="radio" id="radioInactive" name="locationState" value="False" class="" onchange="validateForCancelButton();" />
                    </div>


                    <div class="col-lg-2" id="addCancelButtonDiv" style="margin-top: 23px;padding-left: 0px;padding-right: 0px;">
                        <div class="form-group" style="margin-left: 18px;">
                            <input type="button" class="btn btn-primary btnaddLocation" id="btnaddLocation" style="margin-right: 20px;" value="Add" onclick="" />
                            <input type="button" class="btn btn-danger  btnCancelLocation" id="btnCancelLocation" style="font-size: 12px;" value="Cancel" onclick="" />
                        </div>
                    </div>
                </form>
                <label id="output"></label>


            </div>

            <div class="table-responsive" style="margin-top:15px;">
                <table id="addLocationTypeTable" class="table table-bordered table-striped table-hover"></table>
            </div>
        </div>
    </div>
</div>

