@{
    ViewBag.Title = "Delivery Unit";
}


@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/DeliveryUnit")
<style>

    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }

    tfoot {
        display: table-header-group;
    }
	.ruleDesc {
		border: 1px solid #cccccc;
		font-size: 12px;
		max-height: 80px;
		max-width: 100%;
		min-width: 20%;
		min-height: 30px;
	}
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        Delivery Unit LIST
    </div>
    <div class="panel-body">

        <div class="row">

			<form name="frmTool" method="Post" id="uploadTool">
				<div class="col-lg-3">
					Unit Name<a class="text-danger">*</a>: <input class="form-control required " placeholder="Unit Name" id="unitName" name="unit" type="text" required />
					<div class="row">
						<label id="tbAddNewUnit-Required" style="color: red; font-size: 10px; text-align: center; padding-left:11px;"></label>
					</div>

				</div>


				<div class="col-lg-3">
					Unit Desc<a class="text-danger">*</a>: <input class="form-control required " placeholder="Unit Desc" id="unitDesc" name="unit" type="text" required  maxlength="2500" />
					<div class="row">
						<label id="tbAddNewUnitDesc-Required" style="color: red; font-size: 10px; text-align: center; padding-left:11px;"></label>
					</div>

				</div>
				<div class="col-lg-2">
					Method: <div class="form-inline"><input type="checkbox" class="form-check-input" id="chkMethod">
                         </div> 
				</div>
				<div class="col-lg-2">
					Operator Count:<div class="form-inline">
	<input type="checkbox" class="form-check-input" id="chkOperatorCount">
</div>
</div>
			</form>

            <div class="col-lg-2">
                <button id="btnAddToolKitName" type="submit" class="btn btn-success" onclick="validateAddUnit()">+ Add New Unit</button>

            </div>

        </div>


        <div class="table-responsive" style="overflow-x: auto; ">

            <table id="Delivery_Unit_Search" class="table table-striped table-bordered table-hover" style="width:100%"></table>

        </div>
    </div>

    <div class="modal fade " id="editUnit" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Unit Details</h4>
                </div>
                <div class="modal-body" id="updateDeliveryUnit" style="height: 220px;">
                </div>
            </div>
        </div>

    </div>


    <div class="modal fade " id="addReason" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="unitName">Change of Success Reason Details</h4>
                </div>
                <div class="modal-body" id="updateReason" style="height: 420px; overflow-y:auto ">
                    @*<input type="text" id=""  class="form-control" placeholder="Add Reason" />
                        <br>
                        <button id="reasonBtn"  type="submit" onclick="addReason()" pull-right class="btn btn-primary btn-lg">Add Reason</button>
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>S No.</th>
                                <th>Reason</th>
                                <th>Edit</th>

                            </tr>
                        </table>*@
                </div>
            </div>
        </div>

    </div>







</div>


