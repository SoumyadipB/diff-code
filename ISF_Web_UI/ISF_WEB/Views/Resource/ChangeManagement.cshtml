    $(document).ready(function () {    
        loadChangeList();
       
        $(".checkBoxClass").change(function () {
            if ($(this).attr("checked")) {
                flag = flag + 1;
               
            }
            else {
                flag = flag - 1;
            }
        });

        if (flag > 0) {
            $("#btnAccept").style.display = "";
            $("#btnReject").style.display = "";

        }
        else
            if (flag = 0) {
                $("#btnAccept").style.display = "none";
                $("#btnReject").style.display= "none";

            }

      
        
    });
</script>
