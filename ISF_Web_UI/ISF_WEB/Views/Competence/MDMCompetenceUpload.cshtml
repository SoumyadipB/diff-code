<!DOCTYPE html>
@{
    ViewBag.Title = "Competence Upload";
}
<html>
<head>
    @Scripts.Render("~/bundles/mdmCompetenceUpload")
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        .rightHeading {
            padding: 7px;
            text-transform: uppercase;
            text-align: center;
            font-size: 14px;
            background-color: #cddece;
        }
        * {
            box-sizing: border-box
        }

        body {
            font-family: "Lato", sans-serif;
        }

        /* Style the tab */
        .tab {
            float: left;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            width: 50%;
        }

            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
                font-size: 17px;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #cddece;
                }

        /* Style the tab content */
        .tabcontent {
            float: left;
            /*padding: 0px 12px;*/
            border: 1px solid #ccc;
            width: 50%;
            height:138px;
        }
    </style>
</head>
<body>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                ITM Training Upload
            </div>
            <div class="panel-body">
                <div class="tab">
                    <button class="tablinks" id="defaultOpenTab" onclick="openTrainingTab(event, 'itmTraining')">ITM Training Assigned & Completed</button>
                    <button class="tablinks" onclick="openTrainingTab(event, 'masterTraining')">Master Training List</button>
                </div>
                <div id="itmTraining" class="tabcontent">
                    <div class="rightHeading">ITM Training Assigned & Completed</div>
                    <div class="row">
                        <div class="col-lg-10">
                            <form method="POST" enctype="multipart/form-data" id="fileUploadForm">
                                <div style="padding:5px;"><input type="file" id="itmTrainingUpload" class="form-control" name="Choose File" required /></div>
                                @*<label id="lbltxt"></label>*@
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-12" style="text-align:right">
                        <label class="disabledbutton" style="float:left;"><b>Note: </b>Only '.txt' file extension can be uploaded!</label>
                        <button id="btnUploadITM" type="button" class="btn btn-primary" onclick="uploadITMTraining()">Upload</button>
                    </div>
                </div>

                <div id="masterTraining" class="tabcontent">
                    <div class="rightHeading">Master Training List</div>
                    <div class="row">
                        <div class="col-lg-10">
                            <form method="POST" enctype="multipart/form-data" id="fileUploadForm">
                                <div style="padding:5px;"><input type="file" id="masterTrainingUpload" class="form-control" name="Choose File" required /></div>
                                @*<label id="lbltxt"></label>*@
                            </form>
                        </div>
                    </div>

                    <div class="col-lg-12" style="text-align:right">
                        <label class="disabledbutton" style="float:left;"><b>Note: </b>Only '.txt' file extension can be uploaded!</label>
                        <button id="btnUploadMaster" type="button" class="btn btn-primary" onclick="uploadMasterTraining()">Upload</button>
                    </div>
                </div>
            </div>
        </div>
</div>


</body>

</html>
