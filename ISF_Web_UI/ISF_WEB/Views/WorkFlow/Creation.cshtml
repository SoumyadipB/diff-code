@{
    ViewBag.Title = "Delivery Scope";
}
@Scripts.Render("~/bundles/WorkFlow")
    <div id="content">
        <section>
            <div class="section-header">
                <ol class="breadcrumb">
                    <li class="active">Work Flow Creation</li>
                </ol>
            </div>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-2">
                            <label>Domain:</label>
                            <select id="cbxDomain" class="select2able" onchange="getSubDomain();"></select>
                            <input type="text" id="txtDomain" value="" style="display:none;" />
                        </div>
                        <div class="col-lg-2">
                            <label>SubDomain:</label>
                            <select id="cbxSubDomain" class="select2able"></select>
                        </div>
                        <div class="col-lg-2">
                            <label>Service Area:</label>
                            <select id="cbxServiceArea" class="select2able" onchange="getSubServiceAreas();"></select>
                            <input type="text" id="txtServiceArea" value="" style="display:none;" />
                        </div>
                        <div class="col-lg-2">
                            <label>Sub Service Area:</label>
                            <select id="cbxSubServiceArea" class="select2able"></select>
                        </div>
                        <div class="col-lg-2">
                            <label>Technology:</label>
                            <select id="cbxTechnology" class="select2able" onchange="getSubTechnologies();"></select>
                            <input type="text" id="txtTechnology" value="" style="display:none;" />
                        </div>
                        <div class="col-lg-2">
                            <label>Activity:</label>
                            <select id="cbxActivity" class="select2able" onchange="getSubActivity();"></select>
                            <input type="text" id="txtActivity" value="" style="display:none;" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-2">
                            <label>Sub Activity:</label>
                            <select id="cbxSubActivity" class="select2able">
                                <option value="0"></option>
                            </select>
                            <input type="text" id="txtSubActivity" value="" style="display:none;" />
                        </div>
                        <div class="col-lg-4">
                            <br />
                            <input type="file" id="files" name="files[]"  style="padding-left:35px;"/>
                            <output id="list"></output>
                        </div>


                        <button type="submit" class="btn btn-primary">Upload</button>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#openModal" onclick="initModal();">Import existing WF</button>
                        <button type="submit" class="btn btn-primary" onclick="reset();">Reset</button>
                        <button type="submit" class="btn btn-primary">Save</button>

                    </div>

                </div>

            </div>

			<div class="modal fade" id="openModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
							<h4 class="modal-title" id="myModalLabel">Import existing WF</h4>
						</div>
						<div class="modal-body">
							<div class="row">

								<div class="col-lg-4">
									<label>Project ID</label>
									<select id="cbxProject" class="select2able"></select>
								</div>
								<div class="col-lg-4">
									<label>Project Name</label>
									<select id="cbxProjectName" class="select2able"></select>
								</div>
								<div class="col-lg-4">
									<label>Customer Name</label>
									<select id="cbxCustomer" class="select2able"></select>
								</div>
								<div class="col-lg-4">
									<label>Market Area</label>
									<select id="cbxMarket" class="select2able"></select>
								</div>
								<div class="col-lg-4">
									<label>Country</label>
									<select id="cbxCountry" class="select2able"></select>
								</div>
								<div class="col-lg-3">
									<button class="btn btn-primary" type="submit" onclick="searchProjects();">Search</button>
									<button class="btn btn-primary" type="submit" onclick="addScope();">Add Deliverable</button>
								</div>

							</div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="dataTable_wrapper">
                                        <table class="table table-striped table-bordered table-hover" id="table_project">
                                            <thead>
                                                <tr>
                                                    <th>Select</th>
                                                    <th>Project Name</th>
                                                    <th>Customer Name</th>
                                                    <th>Market Area</th>
                                                    <th>Country</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody id="project_tBody"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div> <!--//Body -->
					</div>
				</div>
			</div>



        </section>
    </div>
