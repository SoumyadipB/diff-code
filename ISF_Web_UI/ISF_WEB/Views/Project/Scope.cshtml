<style>

    .CellWithComment {
        position: relative;
    }

    .filterHrefs {
        width: auto;
        text-align: center;
        text-transform: capitalize;
        background-color: #ffffffc2;
        padding: 4px;
        border: 1px solid;
        border-radius: 10px;
        border-color: #cec8c8;
        font-size: 10px;
    }

    pre {
        margin: 0;
        padding: 0;
        border: 0;
        outline: 0;
        font-size: 100%;
        font-family: inherit;
        vertical-align: baseline;
        background: transparent;
    }

    a.dividerStatus:hover {
        background-color: #eeeeee;
    }

    .dividerStatus.active {
        background-color: #eeeeee;
        text-decoration: none;
    }

    .dividerStatus {
        border-right: 1px solid;
        padding: 4px 0px 4px 0px;
        color: #cec8c8;
    }

    .CellComment {
        margin-left: 20px;
        font-size: 10px;
        text-align: center;
        border-radius: 5px;
        width: 120px;
        display: none;
        position: absolute;
        z-index: 100;
        border: 1px;
        background-color: #e8eff9;
        border-style: double;
        border-width: 1px;
        border-color: #a5d3dc;
        padding: 3px;
        color: black;
        text-transform: none;
    }


    .CellWithComment:hover span.CellComment {
        display: block;
    }

    #gantt_here_dp {
        height: 90%;
    }

    .dhtmlx-customCss {
        font-weight: bold !important;
        color: #27616d !important;
    }

    .dhtmlx-info div {
        background-color: #c3d9f5 !important;
    }

    .gantt_cancel_btn_set, .gantt_save_btn_set {
        float: right !important;
    }

    .calendar_panel {
        position: fixed;
        top: 8%;
        width: 68.8%;
        height: 95%;
        background-color: #ffffff;
        right: -10%;
        opacity: 0;
        margin-top: -10px;
    }

    .gantt_delete_btn_set {
        display: none;
    }

    .gantt_time {
        display: none;
    }

    .gantt_cal_larea {
        height: 102px;
    }

    .gantt_cal_light {
        height: 300px;
    }

    .gantt_time_selects {
        display: none;
    }

    .gantt_cal_lsection {
        display: none;
    }

    .reduceBottomMargin {
        margin-bottom: 1px !important;
    }

	.updateBlockCss {
		border: 1px solid #ccc;
		padding: 7px;
		background-color: #ecf7ec;
		border-radius: 4px;
		margin-bottom: 10px !important;
	}
</style>

