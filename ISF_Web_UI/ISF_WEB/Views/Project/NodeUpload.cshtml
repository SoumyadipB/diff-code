@{
    ViewBag.Title = "Delivery Scope1";
}

@*@Scripts.Render("~/bundles/JsNetworkElement")*@
@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/DataTablesAdvancedScript")


<style>
    tfoot {
        display: table-header-group;
    }

    #table_infoNE_filter {
        display: none;
    }
</style>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Network Element
            <a href="#" class="pull-right" data-toggle="tooltip" title="Please reach out to support for Network element data." id="btnDownloadNEData" style="cursor:default;"><i class="fa fa-download glyphicon-ring glyphicon-green"></i></a>
        </div>
        <div id="loaderDiv"><img src="~/Content/images/loading-1.gif" style=" width:50px; height:50px;margin-left:50%"></div>
        <div class="panel-body" id="panel_infoNE" style="display:none;">
            <div class="table-responsive" style="overflow-x: auto;">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="table_infoNE">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Market</th>
                            <th>Network Element Type</th>
                            <th>Vendor Name</th>
                            <th>Network Sub Element Type</th>
                            <th>Network Element Name/ID</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Domain</th>
                            <th>Technology</th>
                            <th>Uploaded On</th>
                            <th>Uploaded By</th>
                        </tr>
                    </thead>
                    <tbody id="tBodyInfo"></tbody>
                    <tfoot>
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAllNE" onchange="NE.toggleSelectAll(this)" style="text-align:center" disabled>
                            </th>
                            <th>Market</th>
                            <th>Network Element Type</th>
                            <th>Vendor Name</th>
                            <th>Network Sub Element Type</th>
                            <th>Network Element Name/ID</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Domain</th>
                            <th>Technology</th>
                            <th>Uploaded On</th>
                            <th>Uploaded By</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <br />
            <div style="text-align:right; height: 32px;">
                <!-- button for REF Mapping File  -->
                <a href="#Download" class="btn btn-primary" onclick="downloadNERefMappingFile();" style="white-space:pre-line;" title="Network Element hierarchy & &#013;mapping guide for users to enter valid &#013;data entries in the Network Element &#013;Template" >Download "Template Ref. Guide"</a>
                <!-- button for sample template  -->
                <a href="#Download" class="btn btn-primary" onclick="downloadTemplateFile({thisObj:this,fileName:'NetworkElementTemplate'});">Download Template</a>
                <!-- button for NE Upload  -->
                <button id="btnUploadNewNE" style="cursor: pointer;" data-toggle="modal" type="button" class="btn btn-primary" onclick="validateNEUploadStatus()">Add/Upload Network Element</button>
                <input type="file" id="uploadNE" style="display:none" accept=".xlsx" onchange="selectedNEFileValidation();"/>
            </div>

        </div>
    </div>
</div>
