<style>
    .select2able {
        padding-left: 10px;
        padding-right: 10px;
    }

    tfoot {
        display: table-header-group;
    }

    .my-legend .legend-scale ul {
        margin-top: 5px;
        padding: 0;
        float: right;
        list-style: none;
    }

        .my-legend .legend-scale ul li {
            display: block;
            float: left;
            width: 50px;
            margin-bottom: 6px;
            text-align: center;
            font-size: 80%;
            list-style: none;
        }

    .my-legend ul.legend-labels li span {
        display: block;
        float: left;
        height: 15px;
        width: 50px;
    }
    .truncateTableFields {
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .aqua-tooltip + .tooltip > .tooltip-inner {
        background-color: #4E4E4E;
        border-radius: 0px;
    }

    .aqua-tooltip + .tooltip > .tooltip-arrow {
        border-top-color: #4E4E4E;
        border-bottom-color: #4E4E4E;
    }

   .tooltip {
        position:relative;
        display:inline-block;
    }
    .tooltip .tooltiptext {
        visibility: hidden;
        width:80px;
        background-color:darkblue;
        color:#fff;
        text-align:center;
        border-radius:6px;
        padding:5px 0;
        position:absolute;
        bottom:100%;
        left:50%;
        margin-left:-60px;
    }
    .tooltip:hover .tooltiptext{
        visibility:visible;
    }
</style>
<script>
    ProjectID = localStorage.getItem("views_project_id");
    var ResourceID = 0, RRID, RPID, duplicateRPID, hasMultipleRPID;
