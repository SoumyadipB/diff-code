
@Scripts.Render("~/bundles/BotErrorDictionary")
@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/DataTablesAdvancedScript")

@{
    ViewBag.Title = "ISF Error Dictionary";
}

@Scripts.Render("~/bundles/jqueryui")
<style>

    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }
    /*---disable scroll bar on web page---*/
    .no-scroll {
        overflow: hidden;
    }
    /*---disable global search---*/
    .dataTables_filter {
        display: none;
    }

    .ruleDescStyling {
        min-width: 100px;
        max-width: 200px;
        width: 50%;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .errTypeStyling {
        min-width: 100px;
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    /*rule description text area*/
    .errorType {
        border: 1px solid #cccccc;
        font-size: 12px;
        min-height: 25px;
        max-height: 40px;
        max-width: 100%;
        min-width: 300px;
    }

    .errorMessage {
        border: 1px solid #cccccc;
        font-size: 12px;
        min-height: 25px;
        max-height: 40px;
        min-width: 400px;
        max-width: 100%;
    }
</style>
<div class="col-lg-12">
    <div id="content" class="panel panel-default">
        <div class="panel-heading">
            ISF Error Dictionary
        </div>
        <section>
            <div id="container" class="panel-body">
                <div id="divAddError" class="well">
                    <div class="row">


                        <div class="form-inline col-lg-2">

                            External Reference<span style="color:red">*</span>
                            <select id="extRef" onchange="enableTextFields()" required>
                                <option></option>
                            </select>
                        </div>

                        <div class="form-inline col-lg-4">
                            <label class="required">Error Type</label><span style="color: red">*</span><br />
                           <textarea class="form-control errorType" id="errType" rows="1" required maxlength="100" style="padding:3px;"></textarea>                  
                        </div>



                        <div class="form-inline col-lg-5">
                            <label class="required">Error Message</label><span style="color:red">*</span><br />
                            <textarea class="form-control errorMessage" id="errMsg" rows="1" required maxlength="250" style="padding:3px;"></textarea>
                        </div>


                        <div class="col-lg-1 pull-right" style="margin-top: 21px;">

                            <button id="addError" class="btn btn-primary btn-sm" style="height: 28px; padding: 3px 12px; " onclick="AddError();">Add Error</button>

                        </div>

                    </div>
                </div>
                <div id="div_table" class="table-responsive" style="overflow-x: auto;">
                    <table class="table table-striped table-bordered table-hover" id="botErrorDictionaryTable" style="margin: 0px; width:100%"></table>
                </div>

            </div>
        </section>
    </div>
</div>



