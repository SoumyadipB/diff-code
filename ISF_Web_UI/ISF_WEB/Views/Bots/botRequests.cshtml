@{
    ViewBag.Title = "BOTS/BOTREQUEST";
}

@Styles.Render("~/bundles/css/DataTableStyle")

<style>
    tfoot {
        display: table-header-group;
    }

    Bot
    .heading {
        font-weight: bold;
    }

    .ui-autocomplete  {
        max-height: 200px;
        overflow-y: auto;
        overflow-x: hidden;
        z-index: 1000 !important;
    }

    .ui-autocomplete-loading {
        background: url('//ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/themes/smoothness/images/ui-anim_basic_16x16.gif') no-repeat right center
    }

    a:hover {
        color: blue;
        text-decoration: underline;
        cursor: pointer;
    }
</style>
<div class="col-lg-12">

    <div class="panel panel-default">

        <div class="panel-heading" align="center">
            My Bot Requests
        </div>

        <div class="panel-body">
            <div class="table-responsive" style="overflow-x: auto;">
                <table id="tbReqBody" class="table table-striped table-bordered table-hover" style="width:100%">
                    <tfoot><tr><th></th><th>Request Id</th><th>Project</th><th>SubActivity</th><th>WorkFlow</th><th>SPOC</th><th>Execution(Weekly)</th><th>Current Status</th><th>Request Type</th><th>Bot Language</th><th>Demo Video URL</th></tr></tfoot>
                </table>
            </div>
        </div>

        <div id="requestInfo" class="modal" role="dialog" style="top:70px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="projectName"></h4>
                </div>
                <div class="modal-body" id="requestDetailsInfo">
                    <table class="table table-striped">
                    </table>
                </div>
                <div class="modal-footer" id="requestfoot">

                </div>
            </div>
        </div>

        <div class="modal fade" id="assignDev" role="dialog">
            <div class="modal-dialog" style="margin-top: 150px; width: 350px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-center">Assign Developer</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Select Employee Signum</label>
                                    <select id="cbxSignumWO" class="select2able"></select>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <button id="assignRequestDev" type="button" class="btn btn-default" style="float:right;">Assign</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="auditModal" role="dialog">
            <div class="modal-dialog" style="margin-top: 150px; width: 350px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-center">AUDIT REQUEST</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <button class=" btn btn-default" title="Input File">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                Input File
                            </button>
                            <button class=" btn btn-default" title="Output File">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                Output File
                            </button>
                            <button class=" btn btn-default" title="Logic File">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                Logic File
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Select Audit Status</label>
                                    <select id="auditOptions">
                                        <option value="-1">Pending</option>
                                        <option value="1">Pass</option>
                                        <option value="0">Fail</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <button id="updateAuditStatus" onclick="submitAuditStatus()" type="button" class="btn btn-default" style="float:right;">Update Status</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="UpdateInfo" class="modal" role="dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title well well-sm text-center">Update Request</h4>
                </div>
                <div class="modal-body" id="updateBody">

                </div>

            </div>
        </div>
        <div id="demoURLPopup" class="modal" role="dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    @*<h4 class="modal-title well well-sm text-center"></h4>*@
                </div>
                <div class="modal-body" id="demoURLBody">
                    <input type="hidden" id="rpaID" />
                    Demo Video URL:
                    <input type="text" id="videoURL" style="width:100%" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-success" onclick="submitURL();" style="margin-left:10px">SUBMIT</button>
                    <button id="closeModal" type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/bundles/DataTableScript")
@Scripts.Render("~/bundles/DataTablesAdvancedScript")
@Scripts.Render("~/bundles/BotRequests")

@Scripts.Render("~/bundles/BotStoreScript")
@Scripts.Render("~/bundles/downloadBotFiles");

<style>
    header {
        background-color: #666;
        padding: 30px;
        text-align: center;
        font-size: 35px;
        color: white;
    }
</style>
