@{
    ViewBag.Title = "Role Capability";
}

@Styles.Render("~/bundles/css/DataTableStyle")

<style>
    tfoot {
        display: table-header-group;
    }

    .heading {
        font-weight: bold;
    }
</style>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Role Capability
            <a class="btn btn-success pull-right" data-toggle="modal" href="#capabilityAdd"><i class="fa fa-plus-square"></i>Add Capability</a>
        </div>

        <div class="panel-body">

            <div class="table-responsive" style="overflow-x: auto;">
                <table id="tblRolesBody" class="table table-striped table-bordered table-hover" style="width:100%"></table>
            </div>
            <div id="capabilityAdd" class="modal" role="dialog" style="top:70px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title well well-sm text-center">
                            Add Capability
                        </h4>
                    </div>
                    <div class="modal-body">
                        <form id="capability_frm">
                            <div class="row">
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Page Name:</label>
                                    <input type="text" id="page_name" class="form-control required" placeholder="Enter The Input" name="capabilityPageName" required />
                                </div>
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Page Group:</label>
                                    <input type="text" id="page_group" class="form-control required" placeholder="Enter The Input" name="capabilityPageGroup" required />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Group Title:</label>
                                    <input type="text" id="group_title" class="form-control required" placeholder="Enter The Input" name="groupTitle" required />
                                </div>
                                <div class="col-md-5">
                                    <label style="margin-left:10px" class="required">Sub-Menu Title:</label>
                                    <input type="text" id="submenu_title" class="form-control required" placeholder="Enter The Input" name="subMenuTitle" required />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Group Icon:</label>
                                    <input type="text" id="group_icon" class="form-control required" placeholder="Enter The Input" name="groupIcon" required />
                                </div>
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Sub-Menu URL:</label>
                                    <input type="text" id="submenu_href" class="form-control required" placeholder="Enter The Input" name="subMenuHref" required />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Group URL:</label>
                                    <input type="text" id="group_href" class="form-control required" placeholder="Enter The Input" name="groupHref" required />
                                </div>
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Priority:</label>
                                    <input type="number" id="priority_p"  min="1" step="1" onkeypress="return event.charCode >= 48 && event.charCode <= 57" class="form-control required" placeholder="Only Numeric Value" name="priority" required />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2 pull-right">
                                    <button type="submit" id="subAddCapability" class="btn btn-sm btn-success">ADD</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div id="updateInfo" class="modal" role="dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title well well-sm text-center">Details</h4>
                    </div>
                    <div class="modal-body" id="updateDetails">

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
@Scripts.Render("~/bundles/global");
@Scripts.Render("~/bundles/RoleCapability");

@Scripts.Render("~/bundles/config")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/DataTableScript")


@Scripts.Render("~/bundles/DataTablesAdvancedScript")

@Scripts.Render("~/bundles/Admin")

<style>
    header {
        background-color: #666;
        padding: 30px;
        text-align: center;
        font-size: 35px;
        color: white;
    }
</style>
