@{
    ViewBag.Title = "Tool Kit";
}
@Scripts.Render("~/Scripts/Admin/ToolKit.js")
@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
<style>

    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)

    }

    tfoot {
        display: table-header-group;
    } 
</style>

<div class="panel panel-default">
    <div class="panel-heading">
       STANDARD TOOL CATALOGUE
	   <a href="/Content/templateFiles/Delivery_tools_classification_guidelines.pdf" class="pull-right" data-toggle="tooltip" title="Click to Download Tool Guide"><i class="fa fa-download glyphicon-ring glyphicon-green"></i></a>
    </div>
    <div class="panel-body">
        <div class="well">
            <div class="row">

                <form name="frmTool" method="Post" id="uploadTool">
                    <div class="row">
                        <div class="col-lg-4">
                            Tool Name<a class="text-danger">*</a>: <input class="form-control required " placeholder="Input Tool Name" id="ToolName" name="tool" type="text" required />
                            <input type="hidden" id="license_Type" name="licenseType" />
                            
                        </div>
                        <div class="col-lg-4" style="text-align:center;">
                            <input class="input-radio3" id="radio2" type="radio" name="active" value="true">
                            <label class="label-radio3" for="radio2">
                                Enable
                            </label>
                            <input class="input-radio3" id="radio2" type="radio" name="active" value="false">
                            <label class="label-radio3" for="radio2">
                                Disable
                            </label>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            Tool Type<a class="text-danger">*</a>: <select id="selectTool" class="select2able" placeholder="ToolType"  style="width:100%" required></select>
                        </div>
                        <div class="col-lg-4" style="padding-left: 90px;">
                            Introduction<a class=" text-danger">
                            *</a>: <input class="form-control required " id="toolIntro" type="text" name="toolIntro" placeholder="Input Introduction" required />
                        </div>

                        <div class="col-lg-4" style="padding-left: 90px;">
                            <button id="btnAddToolKitName" type="submit" class="btn btn-success">+ Add Tool</button>

                        </div></div>

                    <div class="row">
                        <div class="col-lg-4">
                            Developer<a class="text-danger">*</a>: <input class="form-control required " name="toolDeveloper" id="toolDeveloper" placeholder="Input Developer" type="text" required>
                        </div>
                        <div class="col-lg-4" style="padding-left: 90px;">
                            Tool URL: <input class="form-control " placeholder="Input Tool URL" name="toolURL" id="toolURL" type="text" />
                        </div></div>
        </form>
            </div>
        </div>
		
        <div class="table-responsive" style="overflow-x: auto; ">

            <table id="Tool_Name_Search" class="table table-striped table-bordered table-hover" style="width:100%"></table>

        </div>
    </div>



    <div class="modal fade" id="edittoolname" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Tool Details</h4>
                </div>
                <div class="modal-body" id="updatetoolmodal" style="height: 440px;">

                   
                    </div>
                </div>
        </div>
    </div>
    </div>

