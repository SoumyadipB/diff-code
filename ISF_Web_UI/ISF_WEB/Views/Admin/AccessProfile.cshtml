@{
    ViewBag.Title = "Access Profile";
}
@*@Scripts.Render("~/Scripts/Admin/AccessProfile.js")*@
@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")

@Scripts.Render("~/bundles/AccessProfile")
<style>

    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }

    tfoot {
        display: table-header-group;
    }
</style>


<div class="panel panel-default">
    <div class="panel-heading">
        Access Profile
    </div>
    <div class="panel-body">
        <div class="well">
            <div class="row">

                <form name="frmAccessProfile" method="Post" id="Add_Profile">

                    <div class="col-lg-4">
                        Profile Name<a class="text-danger">*</a>: <input class="form-control required " placeholder="Input Profile Name" id="ProfileName" name="Profile" type="text" required />


                    </div>
                    <div class="col-lg-3">
                        Access Role:<br />
                        <select class="select2able select2-offscreen" id="AcessRoleId">
                            <option value="0"></option>
                        </select>



                    </div>
                    <div class="col-lg-3">
                        Organization: <br />
                        <select class="select2able select2-offscreen" id="OrganizationID">
                            <option value="0"></option>
                        </select>

                    </div>

                    <div class="col-lg-2">
                        <button id="btnAddAccessProfile" type="submit" class="btn btn-success" onclick="addAccessProfile()">+ Add Access Profile</button>

                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive" style="overflow-x: auto; ">

            <table id="Access_Profile_table" class="table table-striped table-bordered table-hover" style="width:100%"><tfoot><tr><th scope="col"></th><th scope="col">Access Profile</th><th>Role</th><th scope="col">Organization</th><th scope="col">Status</th></tr></tfoot></table>

        </div>
    </div>



    <div class="modal fade" id="editAccessProfile" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Access Profile Details</h4>
                </div>
                <div class="modal-body" id="updateAccessProfilemodal" style="height: 440px;">



                </div>
            </div>
        </div>



    </div>

</div>


