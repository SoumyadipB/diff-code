@Scripts.Render("~/bundles/DataTableScript")
@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/DataTablesAdvancedScript")
@Scripts.Render("~/bundles/Admin")
@{
    ViewBag.Title = "Admin/ViewAccess";
}

@Scripts.Render("~/bundles/jqueryui")
<style>

    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
    }
    /*---disable scroll bar on web page---*/
    .no-scroll {
        overflow: hidden;  
    }
    /*---disable global search---*/
    .dataTables_filter {    
        display: none; 
    }    
</style>
<div class="col-lg-12">
    <div id="content" class="panel panel-default">
        <div class="panel-heading">
            View Access
        </div>
        <section>
            <div id="container" class="panel-body">
                <div class="well">
                    <div class="row">
                        <div id="lineManagerDiv" style="margin-bottom: 0px; position: relative; display: block">
                            <div class="form-inline col-lg-3">
                                <label>Line Manager(LM)</label>
                                <select id="lineManagerList" class="select2able">
                                    <option value="" selected="selected"></option>
                                </select>
                                <span class="refresh">
                                    <i class="fa fa-refresh fa-fw" style="cursor:pointer;" title="Remove selected line Manager" onclick="clearSearchedLineManager();"></i>
                                </span>
                            </div>
                        </div>
                        <div id="signumListDiv" style="margin-bottom: 0px;position:relative;display: block ">
                            <div class="form-inline col-lg-3">
                                <label>Signum</label>
                                <select id="signumList" class="select2able">
                                    <option value="" selected="selected"></option>
                                </select>
                                <span class="refresh">
                                    <i class="fa fa-refresh fa-fw" style="cursor:pointer;" title="Remove selected signum" onclick="clearSearchFields();"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-inline">
                                <label>Access Role</label>
                                <select id="role" class="select2able">
                                    <option value="0">Select a option</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-inline">
                                <label>Organization</label>
                                <select id="organization" class="select2able">
                                    <option value="0">Select a option</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg1" style="margin-top: 19px;">

                            <button id="search" class="btn btn-primary btn-sm pull-right" style="height: 28px; padding: 3px 12px; " onclick="ValidateSearchAll();">Search</button>

                        </div>
                        <div class="row">
                            <br>
                            <div class="col-lg-12">
                                <button id="revoke" class="btn btn-danger btn-sm pull-right" style="height:28px; padding:3px 12px;   display:none" onclick="revokeCheckedViewAccessProfile();">Revoke</button>
                            </div>
                        </div>
                        <div class="row">
                            <div id="div_table" class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dtAccessProfile" style="margin: 0px; width:100%"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>



