@{
    ViewBag.Title = "Add Role";
}

@Styles.Render("~/bundles/css/DataTableStyle")

<style>
    tfoot {
        display: table-header-group;
    }

    .heading {
        font-weight: bold;
    }
</style>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Roles
            <a class="btn btn-success pull-right" data-toggle="modal" href="#roleAdd"><i class="fa fa-plus-square"></i>Add Role</a>
        </div>

        <div class="panel-body">

            <div class="table-responsive" style="overflow-x: auto;">
                <table id="tblRoles" class="table table-striped table-bordered table-hover" style="width:100%"></table>
            </div>
            <div id="roleAdd" class="modal" role="dialog" style="top:70px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title well well-sm text-center">
                            Add Role
                        </h4>
                    </div>
                    <div class="modal-body">
                        <form id="role_frm">
                            <div class="row">
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Role Name:</label>
                                    <input type="text" class="form-control" id="role" name="role" required />
                                </div>
                                <div class="col-md-5">
                                    <label style="margin-left:10px">Role Alias:</label>
                                    <input type="text" class="form-control" id="alias" name="alias" required />
                                </div>

                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2 pull-right">
                                    <button type="submit" id="subAddRole" onclick="addRole();" class="btn btn-sm btn-success">ADD</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div id="updateRole2" class="modal" role="dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title well well-sm text-center">UPDATE ROLE</h4>
                    </div>
                    <div class="modal-body" id="updateRole">

                    </div>
                </div>
            </div>

            <div id="deleteRole" class="modal" role="dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title well well-sm text-center">Delete Capability</h4>
                    </div>
                    <div class="modal-body" id="deleteDetails">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/global")
@Scripts.Render("~/bundles/AddRole")

@Scripts.Render("~/bundles/config")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/DataTableScript")


@Scripts.Render("~/bundles/DataTablesAdvancedScript")

@Scripts.Render("~/bundles/Admin")



<style>
    header {
        background-color: #666;
        padding: 30px;
        text-align: center;
        font-size: 35px;
        color: white;
    }
</style>
