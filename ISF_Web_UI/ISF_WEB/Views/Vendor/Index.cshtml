@{
    ViewBag.Title = "Vendor";
}
@Scripts.Render("~/bundles/DataTableScript")

@Styles.Render("~/bundles/css/DataTableStyle")
@Scripts.Render("~/bundles/Vendor")

<div class="col-lg-12">

    <div class="panel panel-default">

        <div class="panel-heading">
            Vendor
        </div>
        <div id="page-wrapper" class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="widget-container fluid-height">
                        <div class="tab-pane" id="tab1">
                            <br><button class="btn btn-primary" data-toggle="modal" data-target="#AddVendor" onclick="ClearData()"><i class="icon-plus"></i>Add Vendor</button><br>

                            <div class="dataTable_wrapper">

                                <table class="table table-striped table-bordered table-hover" id="tblVendors">
                                    <thead>
                                        <tr>
                                            <th>Vendor</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyVendors"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.panel -->
        <!-- /.Popup Vendor tab1-->
        <!--Add New Vendor-->
        <div class="modal fade" id="AddVendor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="scopeTitleModal">Add New Vendor</h4>
                    </div>
                    <div class="modal-body" id="scopeContentModal">
                        <div class="widget-container fluid-heightA clearfix">
                            <div class="widget-content padded">
                                <form action="#" class="form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">
                                            <label id="tbAddNewVendor-Ast" style="color: red; font-size: 14px; text-align: center; padding-left:5px;">*</label> Vendor
                                        </label>
                                        <div class="col-md-7">
                                            <input id="tbAddNewVendor" class="form-control" placeholder="Vendor Name" type="text">
                                            <div class="row">
                                                <label id="tbAddNewVendor-Required" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a id="submitModal" class="btn btn-primary" onclick="ValidateAddVendor()">Submit</a>
                        <button id="cancelModal" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Edit Vendor-->
        <div class="modal fade" id="EditVendor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="scopeTitleModal">Edit Vendor</h4>
                    </div>
                    <div class="modal-body" id="scopeContentModal">
                        <div class="widget-container fluid-heightA clearfix">
                            <div class="widget-content padded">
                                <form action="#" class="form-horizontal">
                                    <div class="form-group">
                                        <label hidden id="lblEditVendor" class="control-label col-md-2"></label>
                                        <label class="control-label col-md-5">
                                            <label id="tbEditVendor-Ast" style="color: red; font-size: 14px; text-align: center; padding-left:5px;">*</label> Vendor
                                        </label>
                                        <div class="col-md-6">
                                            <input id="tbEditVendor" class="form-control" placeholder="Vendor Name" type="text">

                                            <div class="row">
                                                <label id="tbEditVendor-Required" style="color: red; font-size: 10px; text-align: center; padding-left:15px;"></label>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a id="submitModal" class="btn btn-primary" onclick="ValidateEditVendor()">Submit</a>
                        <button id="cancelModal" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Delete Vendor-->
        <div class="modal fade" id="DeleteVendor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="scopeTitleModal">Delete</h4>
                    </div>
                    <div class="modal-body" id="scopeContentModal">
                        <div class="widget-container fluid-heightA clearfix">
                            <div class="heading">
                                <i class="fa fa-trash-o"></i>Delete Vendor
                            </div>
                            <div class="widget-content padded">
                                <form action="#" class="form-horizontal">
                                    <center>
                                        <label hidden id="lblDeleteVendor"></label>
                                        <p>Are you sure?</p>
                                        <a id="submitModal" class="btn btn-primary" onclick="deleteVendor()">Yes</a>
                                        &thinsp;&thinsp;&thinsp;&thinsp;&thinsp;&thinsp;
                                        <button id="cancelModal" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    </center>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.Popup Vendor tab1-->

    </div>
</div>
