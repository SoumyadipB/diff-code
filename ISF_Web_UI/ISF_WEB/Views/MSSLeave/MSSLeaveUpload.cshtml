@{
    ViewBag.Title = "MSS Leave Upload";
}
@Scripts.Render("~/bundles/mssLeaveUpload")
@Scripts.Render("~/bundles/downloadTemplates")

<style>
    .well {
        background: white;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
    }

    tfoot {
        display: table-header-group;
    }
    ul.ui-autocomplete {
        z-index: 1100;
    }    
</style>

<div class="panel panel-default">
    <!--Header for MSS Leave Upload Page -->
    <div class="panel-heading">
        MSS Leave Upload
    </div>
    <!--MSS Leave Upload Page UI-->
    <div class="panel-body">
        <div class="well">
            <div class="row">
                <div class="col-lg-12">
                    <form name="leaveUploadForm" method="Post" enctype="multipart/form-data" id="upload_leave">
                        <input type="file" id="mssLeaveUpload" class="form-control" name="Choose File" accept=".csv" required />
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8" style="text-align:right">
                    <label class="disabledbutton" style="float:left;"><b>Note: </b>Only '.csv' file extension can be uploaded!</label>
                </div>
                <div class="col-lg-4">
                    <div>
                        <button id="btnUploadMssLeave" type="button" class="btn btn-primary btn-sm"  disabled="disabled" onclick="uploadMssLeave()"><i class="fa fa-upload" aria-hidden="true"></i> Upload</button> 
                    <a href="#Download" class="btn btn-success btn-sm" onclick="downloadMSSLeaveTemplate({thisObj:this,fileName:'BulkMSSLeaveTemplate'});"><i class="fa fa-download" aria-hidden="true"></i> Download Template </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>