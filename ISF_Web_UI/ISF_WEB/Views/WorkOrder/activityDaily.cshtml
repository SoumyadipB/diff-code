<script type="text/javascript" src="~/Scripts/global.js"></script>
@Scripts.Render("~/bundles/profileRole")

<style>
    tfoot {
        display: none;
    }

    .labelFont {
        font-size: 12px;
    }

    .searchText {
        font-size: 13px;
        height: 22px;
    }

    .notFound {
        width: 100%;
        text-align: center;
        font-size: 18px;
        padding: 36px;
        color: red;
    }

        .notFound:before {
            content: '\f119';
            font-family: fontawesome;
            margin-right: 5px;
            font-size: 18px;
        }

    .dataTables_length {
        display: none;
    }

    .modal-header {
        text-align: center;
        background-color: #eeeeee;
        padding: 10px;
    }

    .nodeNameP {
        width: 158px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>

<div class="row">
    <div class="col-md-6" style="float:left;">
        @*<span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#c7c7c7;"></span><label class="labelFont" id="open">Open</label>
            <span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#0677ad;"></span><label class="labelFont" id="assigned">Assigned</label>
            <span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#ffec2c;"></span><label class="labelFont" id="inprogress">In-Progress</label>
            <span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#ffad4d;"></span><label class="labelFont" id="onhold">On-Hold</label>
            <span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#fb0606;"></span><label class="labelFont" id="deferred">Deferred</label>
            <span style="margin-right: 3px ;padding: 0px 5px 0px 5px;background-color:#00983b;"></span><label class="labelFont" id="closed">Closed</label>*@
    </div>
    <div class="col-md-3" style="float:right;">
        <label class="labelFont">Display:&nbsp;&nbsp;</label>
        <label class="labelFont"><input type="radio" name="display" value="All" checked onclick="showAll()" />&nbsp;Show All&nbsp;&nbsp;</label>
        <label class="labelFont"><input type="radio" name="display" value="Days" onclick="hideWeekEnds()" />&nbsp;Working Days only&nbsp;&nbsp;</label>
    </div>
</div>

<div class="panel panel-default">
    <div id="gantt_hereDaily" style='width:100%; height:95%;'></div>
    @Scripts.Render("~/bundles/activityDaily")
    <div id="modelContainer">
    </div>
</div>

<div class="modal fade" id="outputURLModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Output URLs</h4>
            </div>
            <div class="modal-body inputFilesDiv">
                @*<div class="col-lg-12">*@
                <div class="table-responsive" style="overflow-x:scroll;max-height:300px;">
                    <table class="table table-striped table-bordered table-hover" id="table_outPutURLs" style="width:100%;font-size:smaller;overflow-x:scroll;">
                        <tbody id="table_outputURLs_tbody"></tbody>
                    </table>
                </div>
                @*</div>*@

            </div>
        </div>

    </div>
</div>


